======js====
<script>
    $(document).ready(function() {
        var f = document.getElementById('tekspesan');
        setInterval(function() {
            f.style.display = (f.style.display == 'none' ? '' : 'none');
            // f.style.color = (f.style.color == '#ff0000' ? '#ffffff' : '#ff0000');
            // .style.color = "#ff0000";
        }, 1000);
    
    });
</script>
